generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Vehicle {
  id         Int      @id @default(autoincrement())
  contactNo  String
  price      Float
  brand      String
  model      String
  year       Int
  mileage    Int
  gear       String
  fuelType   String
  options    String[]
  engine     String?
  details    String?
  posted     Boolean  @default(false) 
  postedAt   DateTime @default(now())
  promoted   Boolean @default(false) 
}

