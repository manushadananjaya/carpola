generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Vehicle {
  vehicleid    Int     @id @default(autoincrement())
  contactNo    String
  price        Int
  brand        String
  model        String
  year         Int
  mileage      Int
  gear         String
  fuelType     String
  options      String
  engine       String
  details      String
  posted       Boolean
  postedAt     DateTime @default(now())
  promoted     Boolean
  featured     Boolean // <-- Add this field for featured vehicles
  userId       Int
  // Add other fields as needed
  user         User @relation(fields: [userId], references: [userId])
}

model Bike {
  bikeid    Int     @id @default(autoincrement())
  contactNo String
  price     Int
  brand     String
  model     String
  year      Int
  mileage   Int
  startType String
  bikeType  String // (electric, fuel)
  engine    String
  details   String
  posted    Boolean
  postedAt  DateTime @default(now())
  promoted  Boolean
  featured  Boolean // <-- Add this field for featured bikes
  userId    Int
  // Add other fields as needed
  user      User @relation(fields: [userId], references: [userId])
}

model User {
  userId     Int      @id @default(autoincrement())
  username   String
  userEmail  String
  userphoneNo String
  userCity   String
  vehicle    Vehicle[]
  bike       Bike[]
}

